    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentsCourse.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentsCourse.Class.ClassCode)
        </dd>
        <dt class="col-sm-2">
