@page
@model ScoreManagement.Pages.AdminMenu.LecturersManage.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Lecturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            LecturerName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.LecturerName)
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.Lecturer.Dob?.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @(Model.Lecturer.Gender == true ? "Male" : Model.Lecturer.Gender == false ? "Female" : "None")
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.Address)
        </dd>
        <dt class="col-sm-2">
            PhoneNumber
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Account
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.Account.Username)
        </dd>
    </dl>
    

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }

    <form method="post" onsubmit="return confirm('Are you sure you want to delete this Lecture?');">
        <input type="hidden" asp-for="Lecturer.LecturerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
