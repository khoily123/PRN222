@page
@model ScoreManagement.Pages.AdminMenu.AccountManage.IndexModel

@{
    ViewData["Title"] = "Account Management";
    Layout = null; // Không sử dụng layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Account Management</title>

    <!-- Các link CSS cần thiết -->
    <link href="~/Asset/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/Asset/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <div id="wrapper">
            <!-- Gọi Sidebar từ Partial View -->
            @await Html.PartialAsync("_Sidebar")

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Gọi Topbar từ Partial View -->
                    @await Html.PartialAsync("_Topbar")

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <h1 class="h3 mb-2 text-gray-800">Account Management</h1>
                        <p class="mb-4">This table shows the list of accounts with options to create, edit, view, or delete each account.</p>

                        <!-- Create New Account Button -->
                        <div class="mb-3">
                            <a asp-page="Create" class="btn btn-primary">Create New Account</a>
                        </div>

                        <!-- DataTable Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Account List</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>AccountId</th>
                                                <th>Username</th>
                                                <th>Password</th>
                                                <th>Role</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Account)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.AccountId)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                                    <td id="password-@item.AccountId" data-password="@item.PasswordHash">
                                                        @("*".PadLeft(item.PasswordHash.Length, '*'))
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                                                    <td>
                                                        <button class="btn btn-secondary" onclick="togglePassword(@item.AccountId, this)">Display</button> |
                                                        @if (item.Role != "ADMIN")
                                                        {
                                                            <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.AccountId">Edit</a> 
                                                        }
                                                        <a asp-page="./Details" class="btn btn-success" asp-route-id="@item.AccountId">Deltails</a>
                                                        @if (item.Role != "ADMIN")
                                                        {
                                                            <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.AccountId">Delete</a>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.container-fluid -->
                    <!-- End of Page Content -->

                </div>
                <!-- End of Main Content -->
            </div>
            <!-- End of Content Wrapper -->

        </div>
    </header>

    <!--script-->
    <script>
        function togglePassword(accountId, button) {
            const passwordCell = document.getElementById(`password-${accountId}`);
            const originalPassword = passwordCell.getAttribute('data-password');

            // Kiểm tra trạng thái hiện tại của ô mật khẩu
            if (passwordCell.textContent.includes("*")) {
                // Hiển thị mật khẩu
                passwordCell.textContent = originalPassword;
                button.textContent = "Hide";
            } else {
                // Ẩn mật khẩu
                passwordCell.textContent = "*".repeat(originalPassword.length);
                button.textContent = "Display";
            }
        }
    </script>
    <script src="~/Asset/vendor/jquery/jquery.min.js"></script>
    <script src="~/Asset/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Asset/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Asset/js/sb-admin-2.min.js"></script>
    <script src="~/Asset/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Asset/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Asset/js/demo/datatables-demo.js"></script>
</body>
</html>
